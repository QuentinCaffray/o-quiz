{
  "name": "api",
  "description": "API Oquiz",
  "keywords": [
    "plateforme de quizzes"
  ],
  "author": "dublin@oclock.io",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "======= Pour la prod =======": "========================",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "docker:start": "npm run db:migrate:deploy && node dist/index.js",
    "======= Pour le dev ========": "========================",
    "dev": "node --watch --env-file=.env index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "======= Pour la BDD ========": "========================",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:seed": "node --env-file=.env ./src/models/seeding.ts",
    "db:reset": "npm run db:migrate:reset && npm run db:seed",
    "db:studio": "prisma studio",
    "======= Pour les tests ========": "========================",
    "test:unit": "node --test ./src/**/*.unit.test.ts",
    "test:unit:watch": "node --test --watch ./src/**/*.unit.test.ts",
    "test:spec": "node --test --env-file=./test/config/.env.test --import ./test/config/global-setup.ts --experimental-test-isolation=none ./src/**/*.spec.test.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "axios": "^1.13.2",
    "eslint": "^9.39.1",
    "prisma": "^6.19.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
